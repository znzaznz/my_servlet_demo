<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <description>
        Servlet and JSP Examples.
    </description>
    <display-name>Servlet and JSP Examples</display-name>

    <request-character-encoding>UTF-8</request-character-encoding>
    <servlet>
        <servlet-name>myFirstServelet</servlet-name>
        <servlet-class>Demo01</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>myFirstServelet</servlet-name>
        <url-pattern>/myFisrtServerlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>httpServletGET</servlet-name>
        <servlet-class>HttpServletGET</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>httpServletGET</servlet-name>
        <url-pattern>/httpServletGET</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>httpServletPOST</servlet-name>
        <servlet-class>HttpServletPOST</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>httpServletPOST</servlet-name>
        <url-pattern>/httpServletPOST</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
